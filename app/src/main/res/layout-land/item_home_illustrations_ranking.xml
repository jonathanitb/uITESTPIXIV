<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/image_view_illustrations_ranking"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/gardient_ranking"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/text_view_illustrations_ranking_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/text_view_illustrations_ranking_user"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="210dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="user"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/heart_illustrations_ranking"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/likeheartwhite"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:clickable="true"
        android:focusable="true" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:src="@drawable/perro"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        android:layout_width="30dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/borde_item_view"
        />



</RelativeLayout>