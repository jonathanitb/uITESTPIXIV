<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/image_view_novels_ranking"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:alpha="0.5"
        android:src="@drawable/gradient_novel_rankings"/>


    <ImageView
        android:id="@+id/heart_novel_ranking"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/likeheartwhite"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="200dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/novel_characters"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/text_view_novels_rankings_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="title"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/text_view_novels_rankings_description"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="description"
        android:layout_below="@id/text_view_novels_rankings_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_marginTop="206dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_novels"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.1"
            />
        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/text_view_novels_rankings_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="user"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            />

    </LinearLayout>





</RelativeLayout>