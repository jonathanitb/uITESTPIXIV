<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/image_view_manga_recommended"
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:src="@color/colorAccent"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/image_view_manga_recommended_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/likeheartwhite"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:id="@+id/text_view_manga_recommended_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_manga_recommended"
        android:layout_marginLeft="10dp"
        android:hint="tile"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    
    <TextView
        android:id="@+id/text_view_manga_recommended_description"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_manga_recommended_title"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:hint="description"
        />

    <TextView
        android:id="@+id/text_view_manga_recommended_numlikes"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_manga_recommended_description"
        android:hint="1234"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>